procedure{:refined} InlineIfInTheMiddle(inline n:nat)
    requires
        n < 2;
    requires/ensures
        x >= 0;
    ensures
        x == old(x) + n + 2;
    modifies
        x; z;
{
    Imm(z, 1);
    ghost var h: int;
    h := 0;
    Add(x, z);
    inline if (n == 0)
    {
        h := h + 100;
        Imm(z, 0);
        Add(x, z);
    }
    else
    {
        Imm(z, 1);
        Add(x, z);
        h := h + 20;
    }
    Imm(z, 1);
    h := h + 5;
    Add(x, z);
    assert n == 0 ==> h == 105;
    assert n != 0 ==> h == 25;
}

