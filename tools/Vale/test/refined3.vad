procedure{:refined} InlineIfElse(inline n:nat)
    requires
        n < 3;
    requires/ensures
        x >= 0;
    ensures
        x == old(x) + n;
    modifies
        x; z;
{
    inline if (n == 0)
    {
        Imm(z, 0);
        Add(x, z);
    }
    else if (n == 1)
    {
        Imm(z, 1);
        Add(x, z);
    }
    else
    {
        Imm(z, 2);
        Add(x, z);
    }
}

