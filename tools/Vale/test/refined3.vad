procedure{:refined}{:recursive} Unroll(inline n:nat)
    requires/ensures
        x >= 0;
    ensures
        x >= old(x) + n;
    modifies
        x; z;
{
    inline if (n > 0)
    {
        Imm(z, n);
        Add(x, z);
        Unroll(n - 1);
    }
}

