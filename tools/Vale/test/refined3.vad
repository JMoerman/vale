    ensures
        x == old(x) + 1;
        n || !n;
        src < 0 || 0 <= src;
        Inv(x, y, g, i + 1);
        R(h, g);
    reads
        y;
    modifies
        x; z;
{
    reveal Post;
    Imm(z, 1);
    Add(x, z);
    h := g + 1;
}

