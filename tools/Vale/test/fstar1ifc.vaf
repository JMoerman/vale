let eval_ocmp (s:va_state) (c:ocmp) :bool =
  match c with
  | OLe r1 r2 -> s.[r1] <= s.[r2]

assume val va_lemma_block : b0:va_codes -> s0:va_state -> sN:va_state -> Ghost ((s1:va_state) * (c1:va_code) * (b1:va_codes))
  (requires True)
  (ensures (fun (s1, c1, b1) -> b0 = c1::b1))

assume val va_lemma_empty : s0:va_state -> sN:va_state -> Ghost (sM:va_state)
  (requires True)
  (ensures (fun sM -> s0 == sM /\ sM == sN))

assume val va_lemma_ifElse : ifb:ocmp -> ct:va_code -> cf:va_code -> s_0:va_state -> sN:va_state -> Ghost (bool * va_state)
  (requires True)
  (ensures  (fun (cond, sM) -> cond == eval_ocmp s_0 ifb /\ sM == s_0))

#endverbatim





procedure Imm(out register x:int, inline y:int)
    ensures
        x == y;
{
    assume false;
}

procedure Increment(inout register x:int)
    ensures
        x == old(x) + 1;
{
    assume false;
}

procedure Add(inout register x:int, register y:int)
    ensures
        x == old(x + y);
{
    assume false;
}

procedure AddReg(inout register x:int, register y:int)
    ensures
        x == old(x + y);
{
    Add(x, y); // coerces y from register to operand
}

procedure p()
    modifies
        eax;
    requires
        eax >= 0;
    ensures
        eax >= 2;
{
    Increment(eax);
    Increment(eax);
}

#verbatim
assume val make_opaque : #a:Type -> a -> a
assume val reveal_opaque : #a:Type -> x:a -> Lemma (x == make_opaque x)

let double (x:int):int = x + x
let opaque_double = make_opaque double
#endverbatim

procedure Calls()
    modifies
        eax; ebx;
    ensures
        eax == old(eax) + 3;
{
    Increment(eax);
    Imm(ebx, double(1));
    assert ebx == 2;
    ghost if (ebx <= ebx)
    {
        assert 2 == 2;
    }
    if (ebx <= ebx)
    {
        Add(eax, ebx);
    }
    assert 1 + 2 == 3 by { assert 1 + 2 == 2 + 1; }
    forall x:int, y:int {x + y} :| x >= 0 && y >= 0 :: x + y == y + x
    {
        assert x + y >= 0;
        ghost if (x < y)
        {
            assert x <= y;
        }
    }
}

procedure Ghosts(ghost g1:int) returns(ghost g2:int)
    ensures
        g2 == g1 + 1;
{
    assert opaque_double(3) == 6 by { reveal_opaque(double); }
    assert opaque_double(3) == 6;
    //assert opaque_double(4) == 8;
    g2 := g1 + 1;
}

